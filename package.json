{
  "name": "create-chic",
  "version": "0.0.3",
  "packageManager": "pnpm@6.32.3",
  "description": "template manager for creating new projects.",
  "keywords": [
    "cli",
    "create",
    "manager",
    "templates"
  ],
  "author": "chestnut <banlify@163.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/banlify/create-chic.git"
  },
  "main": "./dist/chic.cjs",
  "files": [
    "dist",
    "templates"
  ],
  "bin": {
    "lib": "dist/lib.cjs",
    "create-chic": "dist/chic.cjs"
  },
  "homepage": "https://github.com/banlify/create-chic#readme",
  "bugs": {
    "url": "https://github.com/banlify/create-chic/issues"
  },
  "sideEffects": false,
  "scripts": {
    "lint": "eslint . --fix",
    "prepare": "husky install",
    "prepublishOnly": "nr build",
    "build": "rimraf dist && esno ./build.ts",
    "release": "bumpp --commit --push --tag && pnpm publish"
  },
  "dependencies": {
    "commander": "^9.1.0",
    "fs-extra": "^10.0.1",
    "minimist": "^1.2.6",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.18.9",
    "@antfu/ni": "^0.13.2",
    "@babel/types": "^7.17.0",
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/node": "^17.0.23",
    "@types/prompts": "^2.0.14",
    "@types/rimraf": "^3.0.2",
    "bumpp": "^7.1.1",
    "cz-customizable": "^6.3.0",
    "esbuild": "^0.14.35",
    "eslint": "^8.11.0",
    "esno": "^0.14.1",
    "husky": "^7.0.4",
    "kolorist": "^1.5.1",
    "lint-staged": "^12.3.7",
    "pnpm": "^6.32.3",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.2",
    "unbuild": "^0.7.4",
    "zx": "^6.0.7"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "lint-staged": {
    "*.{vue,js,ts,tsx,jsx,json}": "pnpm lint"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  }
}
